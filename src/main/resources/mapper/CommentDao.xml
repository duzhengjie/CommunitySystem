<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.communitySystem.dao.topic.CommentDao">

    <insert id="insertComment" parameterType="Comment">
        INSERT * INTO comment VALUE (#{topicId},#{commentId},#{commentContent},#{commentBy},
        #{replyBy},#{commentTime},#{commentPraiseNum})
    </insert>

    <delete id="deleteByCommentBy" parameterType="String">
        DELETE * FROM comment WHERE commentBy = #{commentBy};
    </delete>

    <delete id="deleteByReplyByAndCommentBy" parameterType="String">
        DELETE * FROM comment WHERE replyBy = #{replyBy} and commentBy = #{commentBy};
    </delete>

    <select id="queryByCommentId" resultType="Comment">
        SELECT * FROM comment WHERE commentId = #{commentId};
    </select>
</mapper>